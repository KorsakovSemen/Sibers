@using BusinessLogicLayer.DTO
@model IEnumerable<EmployeeDTO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts {
    @Scripts.Render("~/Scripts/projectData.js")
}

<h2>Сотрудники</h2>
<p>
    <button type="button" onclick="location.href='@Url.Action("Create", "Employee")'" class="btn btn-info add-new"><i style="font-weight:bold; font-size:16px">+</i> Новый</button>
</p>
<table class="table table-bordered table-row-truncate">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MiddleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            <div>@Html.DisplayNameFor(model => model.EmployeeInProjects)</div>
        </th>
        <th>
            <div>@Html.DisplayNameFor(model => model.ExecutorInProjects)</div>
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <div data-toggle="tooltip" data-placement="bottom">@Html.DisplayFor(modelItem => item.LastName)</div>
            </td>
            <td>
                <div data-toggle="tooltip" data-placement="bottom">@Html.DisplayFor(modelItem => item.FirstName)</div>
            </td>
            <td>
                <div data-toggle="tooltip" data-placement="bottom">@Html.DisplayFor(modelItem => item.MiddleName)</div>
            </td>
            <td>
                <div data-toggle="tooltip" data-placement="bottom">@Html.DisplayFor(modelItem => item.Email)</div>
            </td>
            <td>
                <div data-toggle="tooltip" data-placement="bottom">@Html.DisplayFor(modelItem => item.EmployeeInProjects.Count)</div>
            </td>
            <td>
                <div data-toggle="tooltip" data-placement="bottom">@Html.DisplayFor(modelItem => item.ExecutorInProjects.Count)</div>
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Детали", "Details", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>